<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="0"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="1080">
            <shape
                android:innerRadiusRatio="3"
                android:shape="ring"
                android:thicknessRatio="8"
                android:useLevel="false">
                <size
                    android:width="48dp"
                    android:height="48dp"/>
                <gradient
                    android:angle="0"
                    android:endColor="@android:color/white"
                    android:startColor="@color/nemGreen"
                    android:type="sweep"
                    android:useLevel="false"/>
            </shape>
        </rotate>
        <rotate
            android:fromDegrees="720"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="0">
            <shape
                android:innerRadiusRatio="3"
                android:shape="ring"
                android:thicknessRatio="8"
                android:useLevel="false">
                <size
                    android:width="48dp"
                    android:height="48dp"/>
                <gradient
                    android:angle="0"
                    android:endColor="@color/nemGreen"
                    android:startColor="@android:color/white"
                    android:type="sweep"
                    android:useLevel="false"/>
            </shape>
        </rotate>
    </item>
</layer-list>
