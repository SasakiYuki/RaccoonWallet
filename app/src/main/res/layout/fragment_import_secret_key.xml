<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#53A3FA"
            android:src="@mipmap/heroimage_login_large" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_large"
            android:layout_marginRight="@dimen/space_large"
            android:layout_marginTop="@dimen/space_normal"
            android:gravity="center"
            android:text="@string/import_secret_key_fragment_message"
            android:textColor="@color/textBlack"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="@dimen/space_large"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/secretKeyEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="text"
                android:hint="@string/import_secret_key_fragment_hint" />

            <ImageView
                android:id="@+id/scanIconButton"
                android:layout_width="100px"
                android:layout_height="100px"
                android:padding="5dp"
                android:layout_gravity="center"
                android:foreground="?selectableItemBackground"
                android:src="@mipmap/icon_home_scan_gray" />
        </LinearLayout>

        <Button
            android:id="@+id/nextButton"
            android:layout_width="90dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/space_large"
            android:layout_marginTop="@dimen/space_large_half"
            android:background="@color/nemGreen"
            android:gravity="center"
            android:text="@string/com_ok"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/import_secret_key_fragment_policy_message"
            android:textColor="@color/textLightGray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/policyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?selectableItemBackground"
            android:gravity="center"
            android:text="@string/import_secret_key_fragment_policy_button"
            android:textColor="@color/textLightGreen"
            android:textSize="12sp" />
    </LinearLayout>
</ScrollView>