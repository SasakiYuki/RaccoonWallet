<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/nemGreen">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/heroimage_new_large" />
    </FrameLayout>

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textColor="@color/textBlack"
        android:textSize="14sp"
        tools:text="@string/choose_start_security_fragment_description_for_first" />

    <Button
        android:id="@+id/securityButton"
        android:layout_width="192dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:background="@color/nemGreen"
        android:gravity="center"
        android:text="@string/choose_start_security_fragment_security_lesson"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/homeButton"
        android:layout_width="90dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@color/buttonDisable"
        android:gravity="center"
        android:text="@string/choose_start_security_fragment_home"
        android:textColor="@android:color/white" />
</LinearLayout>
